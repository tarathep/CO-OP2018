@{
    Layout = "~/shared/_Layout.cshtml";
    Page.title = "Variable";
}

@{ 
    var total = 0;
    var strName = "";
    if (IsPost)
    {
        var num1 = Request["num1"].AsInt();
        var num2 = Request["num2"].AsInt();
        total = num1 + num2;

        var strNumber1 = Request["num1"].AsInt();
        var strNumber2 = Request["num2"].AsInt();
        strName = strNumber1.ToString() + strNumber2.ToString();
    }
}

<div class="container-fluid">
    <header>
        <h1>Variable</h1>
    </header>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label for="num1">Number 1 : </label>
                    <input type="text" name="num1" id="num1" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="num2">Number 2 : </label>
                    <input type="text" name="num2" id="num2" class="form-control" />
                </div>

                <input type="submit" value="Submit" class="btn btn-success"/>
            </form>
        </div>
        <div class="col-md-6">
            <div>
                Result is @total
            </div>

            <div>
                Result is @strName
            </div>
        </div>
    </div>
</div>